---
// import Cards from '@/components/Cards';
import Layout from '@/components/Layout.astro';
import Projects from '@/components/Projects';
import { SocialMediaIcons } from '@/lib/icons';
import '../styles/globals.css';
import { Button } from '@/components/ui/button';
import { BlogCard } from '@/components/BlogCard';

import { fetchContentfulPosts } from '../lib/blogs/fetchContentfulPosts';
import { fetchProjects } from '../lib/projects/fetchProjects';

let posts: any = [];
try {
  posts = await fetchContentfulPosts();
} catch (error) {
  console.error('Error fetching posts:', error);
}

let projects: any = [];
try {
  projects = await fetchProjects();
} catch (error) {
  console.error('Error fetching projects:', error);
}
---

<Layout title='Brayan M. Cuenca Portfolio'>
  <div class='container mx-auto px-4 min-h-screen pt-12'>
    {/* Hero Section */}
    <section class='text-center mb-12'>
      <div class='max-w-2xl mx-auto'>
        <h1 class='gradient-text text-6xl font-bold leading-tight mb-4'>
          Enthusiastic about the Web.
        </h1>
        <p class='text-xl text-gray-300 mb-6'>
          I'm currently on a journey building tools with AI, leaning more into
          SaaS, immersing myself in Typescript, & overall finding myself as a
          developer and the problems I want to solve.
        </p>
        <div class='flex justify-center items-center mt-6'>
          <SocialMediaIcons />

          <Button
            variant='ghost'
            className='inline-flex items-center text-white px-6 py-3 ml-4'
          >
            Let's work together
            <svg
              class='w-5 h-5 ml-3 hover:translate-x-1 transform transition-transform duration-500 ease-in-out'
              viewBox='0 0 24 24'
              fill='none'
              stroke='currentColor'
              stroke-width='2'
              stroke-linecap='round'
              stroke-linejoin='round'
            >
              <path d='M5 12h14M12 5l7 7-7 7'></path>
            </svg>
          </Button>
        </div>
      </div>
    </section>

    {/* Projects Section */}
    <section class='mb-12'>
      <h2 class='text-3xl font-bold text-white mb-8'>Selected Work</h2>
      
      <Projects projects={projects} />
    </section>

    {/* Blog Section */}
    <section class='mb-12'>
      <h2 class='text-3xl font-bold text-white mb-8'>Thoughts</h2>
      <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8'>
        <BlogCard posts={posts} />
      </div>
    </section>

    {/* About Section */}
    <section class='py-12'>
      <div class='max-w-7xl mx-auto px-12'>
        <h2 class='text-4xl font-bold text-white mb-8'>About</h2>
        <div class='flex flex-col lg:flex-row lg:items-center gap-8'>
          {/* Text Content */}
          <div
            class='lg:w-2/3 text-gray-300 text-base leading-relaxed prose md:prose-base lg:prose-lg'
          >
            <p class=''>
              Hey there, I'm Brayan Mejia and I am Front-End Developer based in
              San Francisco, CA. I have been building web applications since
              2019 and have since worked with a variety of technologies
              including React, Next.js, Supabase, and more. I am currently
              working as Freelance Front-End Developer and looking for new
              opportunities.
            </p>
            <div class='mt-4'>
              <span class='font-bold text-white'>EMAIL</span>:
              mejiabrayan@protonmail.com<br />

              <span class='font-bold text-white'>LOCATION</span>: San Francisco,
              CA
            </div>
          </div>

          <div class='relative lg:w-1/3'>
            <!-- <div
            class="absolute -inset-2 rounded-lg bg-gradient-to-br from-orange-600 via-orange-700 to-red-600 opacity-75 blur"
          ></div> -->
            <img
              src='/me.JPG'
              alt='Brayan M. Cuenca'
              class='rounded-lg shadow-lg grayscale w-full'
            />
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

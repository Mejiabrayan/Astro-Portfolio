---
import '../styles/globals.css';
import { Navbar } from '@/components/Navbar';
import { InfiniteSlider } from '@/components/InfiniteSlider';
import { BentoGrids } from '@/components/BentoGrid';
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <title>Brayan Mejia Cuenca's Website Portfolio</title>
    <link
      href='https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css'
      rel='stylesheet'
    />
  </head>
  <body
    class='relative flex flex-col min-h-screen bg-geist-background dark -tracking-tight font-geist-light dark:text-accents-7 max-w-2xl justify-center mx-auto'
  >
    <Navbar client:only />
    <!-- <div
      class='absolute top-0 z-[-2] h-screen w-screen bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(25,118,210,0.3),rgba(255,255,255,0))]'
    >
    </div> -->

    <main class='flex-grow container mx-auto p-8 mt-20 rounded-md shadow-lg'>
      <section class='flex items-center space-x-4 mb-8' data-aos='fade-down'>
        <div class='flex justify-center items-center'>
          <div
            class='gradient-border rounded-full overflow-hidden w-10 h-10 md:w-10 md:h-10 lg:w-10 lg:h-10'
          >
            <img
              src='/blue.jpeg'
              alt='Brayan Mejia Cuenca'
              class='object-center w-full h-full'
            />
          </div>
        </div>

        <div>
          <h1 class='text-base lg:text-xl'>Brayan Mejia Cuenca</h1>
          <p class='text-sm lg:text-base text-accents-6'>Front-End Developer</p>
        </div>
      </section>
      <section class='mb-8' id='about'>
        <h2 class='text-lg mb-4'>About Me</h2>
        <p class='text-sm md:text-base lg:text-base text-accents-6'>
          I'm a <span class='text-transition'>Front-End Developer</span>,
          transitioning from <span class='text-accents-7'>security</span>
          into the tech world with a <span class='text-accents-7'>zeal</span> for
          <span class='text-accents-7'
            >crafting intuitive and dynamic web applications.
          </span> Leveraging a creative background and a <span
            class='text-accents-7'>continuous learning ethos</span
          >, I build modern digital solutions that <span class='text-accents-7'
            >empower</span
          > and <span class='text-accents-7'>inspire</span>.
        </p>
      </section>
      <section class='mb-8'>
        <h2 class='text-lg mb-4'>Skills</h2>
        <InfiniteSlider client:only />
      </section>

      <section class='mb-8' id='work'>
        <h2 class='text-lg mb-4'>Projects</h2>
        <BentoGrids client:only />
      </section>
    </main>
  </body>
</html>

<script is:inline>
  const theme = (() => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
      return 'dark';
    }
    return 'light';
  })();

  if (theme === 'light') {
    document.documentElement.classList.remove('dark');
  } else {
    document.documentElement.classList.add('dark');
  }

  window.localStorage.setItem('theme', theme);

  const handleToggleClick = () => {
    const element = document.documentElement;
    element.classList.toggle('dark');

    const isDark = element.classList.contains('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  };

  document
    .getElementById('themeToggle')
    .addEventListener('click', handleToggleClick);
</script>
